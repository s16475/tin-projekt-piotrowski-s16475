<%- include('../../fragments/header.ejs') %>

    <main>
        <h2>Lista polis</h2>
        <table class="table-list">
            <thead>
                <tr>
                    <th>Numer</th>
                    <th>Początek ochrony</th>
                    <th>Koniec ochrony</th>
                    <th>Suma ubezpieczenia</th>
                    <th>Ubezpieczający</th>
                    <th>Akcje</th>
                </tr>
            </thead>

            <tbody>
                <% for (let policy of policies) { %>
                    <tr>
                        <td><%= policy.policyNo %></td>
                        <td><%= policy.startDate.toISOString().split('T')[0] %></td>
                        <td><%= policy.endDate.toISOString().split('T')[0] %></td>
                        <td><%= policy.sumInsured %></td>
                        <td><%= policy.insurerId %></td>
                        <td>
                            <ul class="list-actions">
                                <li><a href="/policies/details/<%=policy.policyNo%>" class="list-actions-button-details">Szczegóły</a></li>
                            </ul>
                        </td>
                    </tr>
                <% } %>
            </tbody>
          
        </table>

    </main>

    <%- include('../../fragments/footer.ejs') %>

</body>
</html>

