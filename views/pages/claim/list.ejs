<%- include('../../fragments/header.ejs') %>

    <main>
        <h2>Lista szkód</h2>
        <table class="table-list">
            <thead>
                <tr>
                    <th>Numer</th>
                    <th>Data</th>
                    <th>Wartość</th>
                    <th>Przyczyna</th>
                    <th>Akcje</th>
                </tr>
            </thead>

            <tbody>
                <% for (let claim of claims) { %>
                    <tr>
                        <td><%= claim.claimNo %></td>
                        <td><%= claim.date.toISOString().split('T')[0] %></td>
                        <td><%= claim.value %></td>
                        <td><%= claim.cause %></td>
                        <td>
                            <ul class="list-actions">
                                <li><a href="/claims/details/<%=claim.claimNo%>" class="list-actions-button-details">Szczegóły</a></li>
                                <li><a href="/claims/edit/<%=claim.claimNo%>" class="list-actions-button-edit">Edytuj</a></li>
                                <li><a href="/claims/delete/<%=claim.claimNo%>" class="list-actions-button-delete">Usuń</a></li>
                            </ul>
                        </td>
                    </tr>
                <% } %>
            </tbody>          
        </table>

        <p><a href="/claims/assign" class="form-button-submit">Przydziel szkodę do pracownika</a></p>
        <p><a href="/claims/add" class="form-button-submit">Dodaj nową szkodę</a></p> 

    </main>

    <%- include('../../fragments/footer.ejs') %>

</body>
</html>

